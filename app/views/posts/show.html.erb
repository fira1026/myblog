<h2 align="center">Title: <%= @post.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
 <ul class="listing">
  <div class="row" align="center">
   <div class="col-md-4 col-md-offset-4">
    <li><%= link_to gravatar_for(@post.author), author_path(@post.author) %></li>
    <li class="article-title"><%= link_to @post.author.name, author_path(@post.author) %></li>
    <li><small><%= pluralize(@post.author.posts.count, "post") if @post.author.posts %></small></li>
   </div>
  </div>
 </ul>
 </end>

 <h4 class="center description"><strong>內文:</strong></h4>
 <hr>
 <%= simple_format(@post.content) %>
 <div class="article-actions">

 <% if logged_in? && @post.author.id == session[:user_id] %>
   <%= link_to "Editt", edit_post_path(@post), class: "btn btn-xs btn-primary" %>
   <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this article?"}, class: "btn btn-xs btn-danger" %>
 <% end %>
 <%= link_to "Back", posts_path, class: "btn btn-xs btn-success" %>
 </div>
 <br>
 <p>Posted at:
  <%= @post.created_at %>
 </p>
</div>
