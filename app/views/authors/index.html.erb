<h1 align="center">作者列表</h1>

<div align="center">
 <%= will_paginate %>
</div>

<div align="center">
 <% @authors.each do |author| %>
  <ul class="listing">
   <div class="row">
    <div class="well col-md-4 col-md-offset-4">
     <li><%= link_to gravatar_for(author), author_path(author) %></li>
     <li class="article-title"><%= link_to author.name, author_path(author) %></li>
     <li><small><%= pluralize(author.posts.count, "post") if author.posts %></small></li>
     <li><small><%= author.email %></small></li>
    </div>
   </div>
  </ul>
 <% end %>
</div>
