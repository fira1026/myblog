<h1 align="center">Welcome to <%= @author.name %>'s Page</h1>
<div class="row">
 <div class="col-md-4 col-md-offset-4 center" align="center">
  <%= gravatar_for @author, size: 100 %>
 </div>
</div>
<% if logged_in? && current_user.id == @author.id %>
 <div align="center">
  <h4><%= link_to "Edit profile", edit_author_path(@author)%></h4>
 </div>
<% end %>

<%= render 'shared/post', obj: @author_posts %>

<div align="center">
  <%= will_paginate @author_posts %>
</div>

