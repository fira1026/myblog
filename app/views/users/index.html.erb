<h1 align="center">作者列表</h1>

<div align="center">
 <%= will_paginate %>
</div>

<div align="center">
 <% @users.each do |user| %>
  <ul class="listing">
   <div class="row">
    <div class="well col-md-4 col-md-offset-4">
     <li><%= link_to gravatar_for(user), user_path(user) %></li>
     <li class="article-title"><%= link_to user.nickname, user_path(user) %></li>
     <li><small><%= pluralize(user.posts.count, "post") if user.posts %></small></li>
     <li><small><%= user.email %></small></li>
    </div>
   </div>
  </ul>
 <% end %>
</div>
