<h1 align="center"><%= @user.nickname %> 的網誌</h1>
<div class="row">
 <div class="col-md-4 col-md-offset-4 center" align="center">
  <%= gravatar_for @user, size: 100 %>
 </div>
</div>
<% if !user_signed_in? && current_user.id == @user.id %>
 <div align="center">
  <h4><%= link_to "Edit profile", edit_user_path(@user)%></h4>
 </div>
<% end %>
<hr>

<%= render 'shared/post', obj: @user_posts %>

<div align="center">
  <%= will_paginate @user_posts %>
</div>

